@model City

<div class="row">
    <div class="col-md-6">
        @foreach(var entry in (Dictionary<string, string>)ViewData["WeatherData"])
        {
            <h6>@entry.Key : @entry.Value</h6>
        }
    </div>
    <div class="col-md-6">
        <div id="map" style="height:400px; width:400px;"></div>
        <script>
            var map;
            var latitude = parseFloat(@((double)ViewData["Latitude"]));
            var longitude = parseFloat(@((double)ViewData["Longitude"]));
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'),
                    {
                        center: { lat: latitude, lng: longitude },
                        zoom: 7,
                        
        });
}
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.GoogleApiKey&callback=initMap"
                async defer></script>
    </div>
</div>
